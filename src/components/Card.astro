---
const { img, title, items, price } = Astro.props
---

<article
  class="flex flex-col w-full sm:h-[350px] h-[260px] overflow-hidden bg-[#564c48]/30 rounded-md"
>
  <picture class={`relative w-full ${items.length === 0 ? 'h-4/6' : 'h-3/6'}`}>
    <img
      loading="lazy"
      decoding="async"
      class="w-full h-full object-cover"
      src={img}
      width={300}
      height={175}
      alt={`imagen de ${title} de la pollerÃ­a Andrea`}
    />
  </picture>
  <div class={`w-full sm:p-3 p-2 ${items.length === 0 ? 'h-2/6 flex justify-between items-center' : 'h-3/6'}`}>
    {items.length !== 0 ? (
      <h5 class="font-bold sm:text-xl text-xs flex justify-between items-center text-balance">
      <span>{title}</span>
      <span class="bg-[#564c48] text-white px-2 rounded-md">S/.{price}</span>
    </h5>
      <ul class="list-disc flex flex-col">
      {items.map((item: string) => (
        <li class="sm:ml-5 ml-4 sm:text-base text-xs text-white/80">{item}</li>
      ))}
    </ul>
    ) : (
      <p class="font-bold sm:text-xl text-xs flex justify-between items-center text-balance">{title}</p>
      <p class="bg-[#564c48] text-white font-bold sm:text-[20px] text-xs px-2 sm:py-2 py-0 rounded-md">S/.{price}</p>
    )}
  </div>
</article>
